{
  "manifest_version": 2,
  "name": "jungleVault",
  "version": "0.0.2",
  "description": "Easy browser-integrated Banano wallet",
  "icons": {
    "128": "icon128.png",
    "32": "icon128.png",
    "48": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "externally_connectable": {
    "matches": ["https://localhost/*"]
  },
  "content_scripts": [
    {
    "matches": [
        "<all_urls>"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_icon": {
      "16": "icon128.png",
      "32": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Control your wallet"
  }
}

